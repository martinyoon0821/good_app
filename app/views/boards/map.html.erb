/* Style the header */
.header {
  width:100%;
  height:150px;
  background:#fd7f4f;
}
.header .btn_Area {position:absolute; text-align:center; width:100%; top:100px;}
.header .button {background:#008000; padding:5px 20px; border-radius: 5px; display:inline-block; font-size:20px; color:#fff;}
