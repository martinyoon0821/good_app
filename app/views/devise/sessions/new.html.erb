<style>
.orange_window {
	display: inline-block;
	width: 366px; height: 40px;
	border: 2px solid orange;
	background: white;
	text-align: center;
	margin-left: auto;
	margin-right: auto;
	z-index: 9;
}
.input_text {
	width: 348px; height: 30px;
	margin: 4px 0 0 9px;
	border: 0;
	line-height: 30px;
	font-weight: bold;
	font-size: 16px;
	outline: none;
	color: gray;
}
.sch_smit {
	width: 54px; height: 30px;
	margin: 0; border: 0;
	vertical-align: top;
	background: orange;
	color: white;
	font-weight: bold;
	border-radius: 1px;
	cursor: pointer;
	margin: auto;
}
.sch_smit:hover {
	background: orange;
	margin-left: auto;
}
.centered {
  position: fixed;
  top: 45%;
  left: 50%;
  /* bring your own prefixes */
  transform: translate(-50%, -50%);
}
.head {
	font-family: monospace;
	font-size: 50px;
	text-align: center;
	font-weight: bold;
	color: coral;
}
.login_position {
	position: fixed;
    left: 20%;
}
.find_info .bar {
    margin: 0 4px;
}
.bar {
    display: inline-block;
    width: 1px;
    height: 13px;
    text-indent: -999em;
    background: #E4E4E5;
</style>
<div class="centered">
	<!--<span class='orange_window'>-->
	<!--	<input type='text' class='input_text' />-->
	<!--</span>-->
	<!--<button type='submit' class='sch_smit'>검색</button>-->
	<p class="head">오늘은 어디가?</p>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="field">
	    <%= f.label :email %><br />
	  </div>
	  <div class="orange_window">
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_text", placeholder: "아이디", value: "" %><br /><br />
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	  </div>
	  <div class="orange_window">
	    <%= f.password_field :password, autocomplete: "current-password", class: "input_text", placeholder: "비밀번호", value: "" %><br /><br />
	  </div>
	  <% if devise_mapping.rememberable? %>
	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %><br /><br />
	    </div>
	  <% end %>
	    <button type='submit' class='sch_smit'>Log in</button><br /><br />
	<% end %>
	<div class="login_position">
		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
 		 <%= link_to "Sign up", new_registration_path(resource_name) %>
		<% end %>
		<span class="bar" aria-hidden="true">|</span>
		</span>
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	 	 <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
		<% end %>
	</div>
</div>